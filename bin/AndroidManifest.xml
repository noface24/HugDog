<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.hugdog"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
       
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name=".DogActivity"
            android:label="@string/title_activity_dog" >
        </activity>
        <activity
            android:name=".HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
        <activity
            android:name=".VaccineActivity"
            android:label="@string/title_activity_vaccine" >
        </activity>
        <activity
            android:name=".TipActivity"
            android:label="@string/title_activity_tip" >
        </activity>
        <activity
            android:name=".AlertActivity"
            android:label="@string/title_activity_alert" >
        </activity>
        <activity
            android:name=".AlertDetailActivity"
            android:label="@string/title_activity_alert_detail" >
        </activity>
        <activity
            android:name=".DetailAlertActivity"
            android:label="@string/title_activity_detail_alert" >
        </activity>
        <activity
            android:name=".NoseBleedActivity"
            android:label="@string/title_activity_nose_bleed" >
        </activity>
        <activity
            android:name=".FeedActivity"
            android:label="@string/title_activity_feed" >
        </activity>
        <activity
            android:name=".DetailTipActivity"
            android:label="@string/title_activity_detail_tip" >
        </activity>
        <activity android:name=".ShowEvent" >
        </activity>

        <receiver
            android:name=".AlarmReceiver"
            android:process=":remote" />

        <activity
            android:name=".DogDetailActivity"
            android:label="@string/title_activity_dog_detail" >
        </activity>
    </application>

</manifest>
